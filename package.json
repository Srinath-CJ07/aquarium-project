{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.17",
    "prettier": "^3.6.2",
    "prettier-plugin-go-template": "^0.0.15",
    "tailwindcss": "^4.1.17",
    "svelte": "5.45.3",
    "@sveltejs/vite-plugin-svelte": "6.2.1",
    "vite": "7.2.4"
  },
   "scripts": {
    "dev": "vite build --watch",
    "build": "vite build"
  },
  "prettier": {
    "plugins": [
      "prettier-plugin-go-template"
    ],
    "overrides": [
      {
        "files": [
          "*.html"
        ],
        "options": {
          "parser": "go-template"
        }
      }
    ]
  }
}
